<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/cb_is_task_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_is_task_done"
                android:layout_toEndOf="@id/cb_is_task_done"
                android:layout_alignBaseline="@id/cb_is_task_done"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:paddingBottom="4dp"
                tools:text="Some Title" />

            <TextView
                android:id="@+id/tv_task_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_task_title"
                android:layout_alignStart="@id/tv_task_title"
                android:layout_below="@id/tv_task_title"
                android:paddingBottom="4dp"
                android:textSize="12sp"
                tools:text="Some Date" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>